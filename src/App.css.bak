@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');

:root {
  --bg: #050c1a;
  --panel: #0f182c;
  --panel-strong: #16233b;
  --ink: #e8edf9;
  --muted: #9bb0ce;
  --accent: #22d3ee;
  --accent-strong: #0ea5e9;
  --highlight: #f97316;
  --line: #1f2b3f;
  --success: #22c55e;
  --error: #ef4444;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: 'Space Grotesk', 'Segoe UI', system-ui, sans-serif;
  background: var(--bg);
  color: var(--ink);
}

.page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32px;
  background: radial-gradient(circle at 10% 10%, rgba(34, 211, 238, 0.08), transparent 35%),
    radial-gradient(circle at 85% 0%, rgba(249, 115, 22, 0.08), transparent 40%),
    linear-gradient(145deg, #050c1a, #0b1222 50%, #040913);
  position: relative;
  overflow: hidden;
}

.glow {
  position: absolute;
  width: 520px;
  height: 520px;
  border-radius: 50%;
  filter: blur(120px);
  opacity: 0.5;
  pointer-events: none;
}

.glow-one {
  background: rgba(34, 211, 238, 0.3);
  top: -140px;
  left: -80px;
}

.glow-two {
  background: rgba(249, 115, 22, 0.3);
  bottom: -180px;
  right: -120px;
}

.shell {
  width: min(1200px, 100%);
  display: grid;
  grid-template-columns: 1.05fr 1fr;
  gap: 20px;
  position: relative;
  z-index: 1;
}

.hero {
  background: linear-gradient(160deg, #0e172a 0%, #0a1324 45%, #07101f 100%);
  border: 1px solid var(--line);
  border-radius: 22px;
  padding: 26px;
  display: flex;
  flex-direction: column;
  gap: 18px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
}

.hero-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.brand {
  display: flex;
  align-items: center;
  gap: 10px;
}

.brand-mark {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: rgba(14, 165, 233, 0.12);
  color: var(--accent-strong);
  font-weight: 700;
  border: 1px solid rgba(14, 165, 233, 0.3);
}

.brand-name {
  font-size: 20px;
  font-weight: 700;
  letter-spacing: -0.02em;
}

.badge {
  padding: 8px 12px;
  border-radius: 999px;
  background: rgba(249, 115, 22, 0.1);
  color: #fbbf24;
  border: 1px solid rgba(249, 115, 22, 0.3);
  font-weight: 700;
  font-size: 12px;
}

.hero-body {
  display: grid;
  gap: 12px;
}

.hero-body h2 {
  margin: 0 0 8px;
  font-size: 28px;
  letter-spacing: -0.02em;
}

.hero-body p {
  margin: 0;
  color: var(--muted);
  line-height: 1.6;
}

.hero-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 12px;
  margin-top: 12px;
}

.hero-card {
  border: 1px solid var(--line);
  background: rgba(255, 255, 255, 0.02);
  border-radius: 14px;
  padding: 12px;
  display: grid;
  gap: 6px;
}

.hero-label {
  color: var(--muted);
  font-size: 13px;
}

.hero-value {
  font-weight: 700;
  font-size: 18px;
}

.hero-sub {
  color: var(--muted);
  font-size: 13px;
  line-height: 1.4;
}

.hero-list {
  margin: 12px 0 0;
  padding-left: 18px;
  color: var(--muted);
  line-height: 1.5;
  display: grid;
  gap: 6px;
}

.hero-footer {
  display: flex;
  gap: 14px;
  flex-wrap: wrap;
  margin-top: auto;
}

.stat {
  padding: 12px 14px;
  border: 1px solid var(--line);
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.02);
}

.stat-value {
  font-weight: 700;
  font-size: 18px;
}

.stat-label {
  color: var(--muted);
  font-size: 13px;
}

.form-panel {
  background: linear-gradient(180deg, #0d1628, #0b1322);
  border: 1px solid var(--line);
  border-radius: 22px;
  padding: 26px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  display: grid;
  gap: 16px;
}

.panel-head {
  display: grid;
  gap: 6px;
}

.panel-head h1 {
  margin: 4px 0 8px;
  font-size: 26px;
  letter-spacing: -0.02em;
}

.panel-head .muted {
  margin: 0;
}

.crumb {
  color: var(--muted);
  font-size: 13px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.muted {
  color: var(--muted);
  line-height: 1.5;
}

.stepper {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 10px;
  margin-top: 6px;
}

.step {
  border: 1px solid var(--line);
  border-radius: 12px;
  padding: 12px;
  display: flex;
  gap: 12px;
  align-items: center;
  background: rgba(255, 255, 255, 0.02);
}

.step-index {
  width: 32px;
  height: 32px;
  border-radius: 10px;
  display: grid;
  place-items: center;
  font-weight: 700;
  border: 1px solid var(--line);
  color: var(--muted);
}

.step-title {
  font-weight: 700;
}

.step-sub {
  color: var(--muted);
  font-size: 13px;
}

.step.active {
  border-color: rgba(14, 165, 233, 0.45);
  background: rgba(14, 165, 233, 0.08);
}

.step.active .step-index {
  border-color: rgba(14, 165, 233, 0.6);
  color: var(--accent-strong);
}

.step.done {
  border-color: rgba(34, 197, 94, 0.45);
  background: rgba(34, 197, 94, 0.08);
}

.step.done .step-index {
  border-color: rgba(34, 197, 94, 0.6);
  color: var(--success);
}

.form {
  display: grid;
  gap: 14px;
}

.input-group {
  display: grid;
  gap: 8px;
}

.input-group label {
  font-weight: 600;
}

.input-group input {
  width: 100%;
  padding: 12px 12px;
  border-radius: 12px;
  border: 1px solid var(--line);
  background: rgba(255, 255, 255, 0.03);
  color: var(--ink);
  font-size: 15px;
  outline: none;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.input-group input:focus {
  border-color: var(--accent-strong);
  box-shadow: 0 0 0 6px rgba(14, 165, 233, 0.15);
  background: #0f1c33;
}

.input-row {
  display: flex;
  align-items: center;
  gap: 10px;
  border: 1px solid var(--line);
  border-radius: 12px;
  padding: 10px 12px;
  background: rgba(255, 255, 255, 0.03);
}

.input-row input {
  border: none;
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.input-prefix {
  padding: 8px 10px;
  border-radius: 10px;
  border: 1px solid rgba(14, 165, 233, 0.4);
  color: var(--accent-strong);
  background: rgba(14, 165, 233, 0.08);
  font-weight: 700;
}

.input-chip {
  padding: 7px 10px;
  border-radius: 10px;
  border: 1px solid rgba(249, 115, 22, 0.35);
  color: #fbbf24;
  background: rgba(249, 115, 22, 0.08);
  font-weight: 700;
  font-size: 12px;
}

.hint {
  color: var(--muted);
  font-size: 13px;
}

.primary-btn {
  padding: 13px 14px;
  border-radius: 12px;
  border: none;
  background: linear-gradient(120deg, var(--accent-strong), #17b6ce);
  color: #041020;
  font-weight: 700;
  font-size: 16px;
  cursor: pointer;
  box-shadow: 0 14px 40px rgba(14, 165, 233, 0.28);
  transition: transform 0.12s ease, box-shadow 0.12s ease, opacity 0.12s ease;
}

.primary-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 16px 46px rgba(14, 165, 233, 0.35);
}

.primary-btn:active {
  transform: translateY(0);
}

.primary-btn:disabled {
  opacity: 0.65;
  cursor: not-allowed;
  box-shadow: none;
}

.ghost-btn {
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--line);
  background: transparent;
  color: var(--ink);
  font-weight: 700;
  cursor: pointer;
}

.text-button {
  border: none;
  background: transparent;
  color: var(--accent-strong);
  font-weight: 700;
  cursor: pointer;
  padding: 8px;
}

.otp-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12px;
}

.otp-title {
  font-weight: 700;
  font-size: 17px;
}

.otp-sub {
  color: var(--muted);
  font-size: 13px;
}

.otp-actions {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.otp-grid {
  display: grid;
  grid-template-columns: repeat(6, minmax(44px, 1fr));
  gap: 10px;
}

.otp-input {
  text-align: center;
  padding: 14px 0;
  border-radius: 12px;
  border: 1px solid var(--line);
  background: rgba(255, 255, 255, 0.03);
  color: var(--ink);
  font-size: 18px;
  font-weight: 700;
  outline: none;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.otp-input:focus {
  border-color: var(--accent-strong);
  box-shadow: 0 0 0 6px rgba(14, 165, 233, 0.15);
  background: #0f1c33;
}

.banner {
  padding: 12px 14px;
  border-radius: 12px;
  border: 1px solid var(--line);
  font-weight: 600;
}

.banner.info {
  border-color: rgba(14, 165, 233, 0.4);
  background: rgba(14, 165, 233, 0.08);
  color: var(--accent-strong);
}

.banner.success {
  border-color: rgba(34, 197, 94, 0.4);
  background: rgba(34, 197, 94, 0.08);
  color: var(--success);
}

.banner.error {
  border-color: rgba(239, 68, 68, 0.45);
  background: rgba(239, 68, 68, 0.08);
  color: var(--error);
}

.policy-card {
  display: flex;
  gap: 10px;
  align-items: flex-start;
  padding: 12px 14px;
  border: 1px solid var(--line);
  border-radius: 12px;
  background: rgba(255, 255, 255, 0.02);
}

.policy-chip {
  padding: 6px 10px;
  border-radius: 10px;
  border: 1px solid rgba(249, 115, 22, 0.35);
  color: #fbbf24;
  font-weight: 700;
  font-size: 12px;
}

.policy-title {
  font-weight: 700;
}

.policy-sub {
  color: var(--muted);
  font-size: 13px;
  line-height: 1.4;
}

.verified-card {
  border: 1px solid rgba(34, 197, 94, 0.35);
  background: rgba(34, 197, 94, 0.05);
  border-radius: 14px;
  padding: 16px;
  display: grid;
  gap: 10px;
}

.checkmark {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  display: grid;
  place-items: center;
  background: rgba(34, 197, 94, 0.2);
  color: var(--success);
  font-weight: 800;
  border: 1px solid rgba(34, 197, 94, 0.4);
}

.verified-actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

@media (max-width: 1024px) {
  .shell {
    grid-template-columns: 1fr;
  }

  .hero {
    order: 2;
  }

  .form-panel {
    order: 1;
  }
}

@media (max-width: 720px) {
  .page {
    padding: 18px;
  }

  .stepper {
    grid-template-columns: 1fr;
  }

  .otp-head {
    flex-direction: column;
    align-items: flex-start;
  }

  .otp-grid {
    grid-template-columns: repeat(6, 1fr);
  }

  .hero-footer {
    flex-direction: column;
  }
}
